#!/bin/bash

cmd="sdrunemacs $@"
xorg_cmd="Xorg\
	-dpi $XORG_DPI\
	-noreset\
	-nolisten tcp\
	+extension GLX\
	+extension RANDR\
	+extension RENDER\
	-logfile /tmp/Xorg.log\
	-config /etc/xpra/xorg.conf"
xpra start $XPRA_DISPLAY \
     --xvfb="${xorg_cmd}"\
     --sharing="${XPRA_SHARING}"\
     --pulseaudio=no\
     --speaker=disabled\
     --no-daemon\
     --dpi="${XPRA_DPI}"\
     --compress="${XPRA_COMPRESS}"\
     --keyboard-sync="${XPRA_KEYBOARD_SYNC}"\
     --mdns=no\
     --encoding="${XPRA_ENCODING}"\
     --bind-tcp=0.0.0.0:"${XPRA_HTML_PORT}"\
     --html=on\
     --auth=env\
     --start-child="${cmd}"


